{
  "Services": {
  },
  "RabbitMQ": {
    "ConnectionString": "${RABBITMQ_URL}",
    "Queues": {
      "PlantAnalysisRequest": "plant-analysis-requests",
      "PlantAnalysisResult": "plant-analysis-results",
      "Notification": "notifications",
      "DealerInvitationRequest": "dealer-invitation-requests"
    },
    "RetrySettings": {
      "MaxRetryAttempts": 3,
      "RetryDelayMilliseconds": 1000
    },
    "ConnectionSettings": {
      "RequestedHeartbeat": 60,
      "NetworkRecoveryInterval": 10
    }
  },
  "FileStorage": {
    "Provider": "FreeImageHost",
    "ImgBB": {
      "ApiKey": "${IMGBB_API_KEY}",
      "ExpirationSeconds": 0
    },
    "FreeImageHost": {
      "ApiKey": "${FREEIMAGEHOST_API_KEY}"
    },
    "Local": {
      "BasePath": "wwwroot/uploads",
      "BaseUrl": "${RAILWAY_PUBLIC_DOMAIN}"
    },
    "S3": {
      "BucketName": "${S3_BUCKET_NAME}",
      "Region": "${AWS_REGION}",
      "UseCloudFront": true,
      "CloudFrontDomain": "${CLOUDFRONT_DOMAIN}"
    }
  },
  "ConnectionStrings": {
    "DArchPgContext": "${DATABASE_URL}"
  },
  "TaskSchedulerOptions": {
    "ConnectionString": "${DATABASE_URL}",
    "Enabled": true,
    "StorageType": "postgresql",
    "RecurringJobsJsonFilePath": "RecurringJobs.json",
    "Path": "/hangfire-worker",
    "Title": "ZiraAI Worker Hangfire Dashboard",
    "Username": "${HANGFIRE_USERNAME}",
    "Password": "${HANGFIRE_PASSWORD}"
  },
  "N8N": {
    "WebhookUrl": "${N8N_WEBHOOK_URL}",
    "UseImageUrl": true
  },
  "CacheOptions": {
    "Host": "${REDIS_HOST}",
    "Port": "${REDIS_PORT}",
    "Password": "${REDIS_PASSWORD}",
    "Database": 0,
    "Ssl": true
  },
  "WebAPI": {
    "BaseUrl": "${ZIRAAI_WEBAPI_URL}",
    "InternalSecret": "${ZIRAAI_INTERNAL_SECRET}"
  },
  "SmsLogging": {
    "Enabled": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information",
      "Business.Services": "Information"
    }
  },
  "SeriLogConfigurations": {
    "FileLogConfiguration": {
      "FolderPath": "/app/logs/worker/",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 52428800,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}"
    },
    "PerformanceMonitoring": {
      "Enabled": true,
      "SlowOperationThresholdMs": 2000,
      "CriticalOperationThresholdMs": 5000,
      "EnableDetailedHttpLogging": false,
      "LogRequestHeaders": false,
      "LogResponseHeaders": false,
      "EnableMetrics": true,
      "MetricsRetentionDays": 30
    }
  }
}