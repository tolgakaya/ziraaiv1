{
  "Services": {
  },
  "RabbitMQ": {
    "ConnectionString": "${RABBITMQ_URL}",
    "Queues": {
      "PlantAnalysisRequest": "plant-analysis-requests",
      "PlantAnalysisResult": "plant-analysis-results",
      "Notification": "notifications",
      "DealerInvitationRequest": "dealer-invitation-requests",
      "FarmerInvitationRequest": "farmer-invitation-requests"
    },
    "RetrySettings": {
      "MaxRetryAttempts": 3,
      "RetryDelayMilliseconds": 1000
    },
    "ConnectionSettings": {
      "RequestedHeartbeat": 60,
      "NetworkRecoveryInterval": 10
    }
  },
  "FileStorage": {
    "Provider": "CloudflareR2",
    "CloudflareR2": {
      "AccountId": "${CLOUDFLARE_R2_ACCOUNT_ID}",
      "AccessKeyId": "${CLOUDFLARE_R2_ACCESS_KEY_ID}",
      "SecretAccessKey": "${CLOUDFLARE_R2_SECRET_ACCESS_KEY}",
      "BucketName": "ziraai-messages-prod",
      "PublicDomain": "${CLOUDFLARE_R2_PUBLIC_DOMAIN}"
    },
    "ImgBB": {
      "ApiKey": "${IMGBB_API_KEY}",
      "ExpirationSeconds": 0
    },
    "FreeImageHost": {
      "ApiKey": "${FREEIMAGEHOST_API_KEY}"
    },
    "Local": {
      "BasePath": "wwwroot/uploads",
      "BaseUrl": "${RAILWAY_PUBLIC_DOMAIN}"
    },
    "S3": {
      "BucketName": "${S3_BUCKET_NAME}",
      "Region": "${AWS_REGION}",
      "UseCloudFront": true,
      "CloudFrontDomain": "${CLOUDFRONT_DOMAIN}"
    }
  },
  "ConnectionStrings": {
    "DArchPgContext": "${DATABASE_URL}"
  },
  "TaskSchedulerOptions": {
    "ConnectionString": "${DATABASE_URL}",
    "Enabled": true,
    "StorageType": "postgresql",
    "RecurringJobsJsonFilePath": "RecurringJobs.json",
    "Path": "/hangfire-worker",
    "Title": "ZiraAI Worker Hangfire Dashboard",
    "Username": "${HANGFIRE_USERNAME}",
    "Password": "${HANGFIRE_PASSWORD}"
  },
  "N8N": {
    "WebhookUrl": "${N8N_WEBHOOK_URL}",
    "UseImageUrl": true
  },
  "CacheOptions": {
    "Host": "${REDIS_HOST}",
    "Port": "${REDIS_PORT}",
    "Password": "${REDIS_PASSWORD}",
    "Database": 0,
    "Ssl": true
  },
  "WebAPI": {
    "BaseUrl": "${ZIRAAI_WEBAPI_URL}",
    "InternalSecret": "${ZIRAAI_INTERNAL_SECRET}"
  },
  "FarmerInvitation": {
    "DeepLinkBaseUrl": "${ZIRAAI_WEBAPI_URL}/farmer-invite/",
    "TokenExpiryDays": 7,
    "SmsTemplate": "{sponsorName} size ücretsiz ZiraAI aboneliği hediye etti!\n\nZiraAI ürünlerinizdeki hastalıkları, eksiklileri analiz eden bir YAPAY ZEKA uygulamasıdır!\n\nUygulamayi indirin:\n{playStoreLink}\n\nDavetiye {expiryDays} gun gecerlidir."
  },
  "DealerInvitation": {
    "DeepLinkBaseUrl": "https://api.ziraai.com/dealer-invitation",
    "FallbackDeepLinkBaseUrl": "https://api.ziraai.com/dealer-invitation",
    "TokenExpiryDays": 7,
    "SmsTemplate": "{sponsorName} size ucretsiz ZiraAI abonelikleri gonderdi!\n\nZiraAI urunlerinizdeki hastaliklari, eksiklikleri analiz eden bir YAPAY ZEKA uygulamasidir!\n\n Musterilerinize ZiraAI abonelikleri gonderebilirsiniz\n\n Davet Kodunuz: DEALER-{token}\n\nHemen katilmak icin tiklayin:\n{deepLink}\n\nVeya uygulamayi indirin:\n{playStoreLink}"
  },
  "Sponsorship": {
    "SmsTemplate": "{sponsorName} size ucretsiz ZiraAI aboneligi hediye etti!\n\n ZiraAI urunlerinizdeki hastaliklari, eksiklikleri analiz eden bir YAPAY ZEKA uygulamasidir!\n\n Abonelik Kodunuz: {sponsorCode}\n\nHemen kullanmak icin tiklayin:\n{deepLink}\n\nVeya ZiraAI'yi indirin:\n{playStoreLink}"
  },
  "SmsLogging": {
    "Enabled": true
  },
  "MobileApp": {
    "PlayStorePackageName": "com.ziraai.app"
  },
  "SmsService": {
    "Provider": "Netgsm"
  },
  "SmsProvider": {
    "Netgsm": {
      "ApiUrl": "https://api.netgsm.com.tr",
      "UserCode": "",
      "Password": "",
      "MsgHeader": "ZIRAAI"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information",
      "Business.Services": "Information"
    }
  },
  "SeriLogConfigurations": {
    "FileLogConfiguration": {
      "FolderPath": "/app/logs/worker/",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 52428800,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}"
    },
    "PerformanceMonitoring": {
      "Enabled": true,
      "SlowOperationThresholdMs": 2000,
      "CriticalOperationThresholdMs": 5000,
      "EnableDetailedHttpLogging": false,
      "LogRequestHeaders": false,
      "LogResponseHeaders": false,
      "EnableMetrics": true,
      "MetricsRetentionDays": 30
    }
  }
}