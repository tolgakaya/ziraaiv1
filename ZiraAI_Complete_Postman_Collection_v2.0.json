              "raw": "{\n  \"email\": \"sponsor{{$timestamp}}@company.com\",\n  \"password\": \"SecurePass123!\",\n  \"fullName\": \"Sponsor Company {{$timestamp}}\",\n  \"mobilePhones\": \"+90 555 {{$randomInt}}{{$randomInt}} {{$randomInt}}{{$randomInt}}\",\n  \"role\": \"Sponsor\"\n}"
            },
