              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.generatedCodes && response.data.generatedCodes.length > 0) {",
                  "        pm.collectionVariables.set(\"sponsorshipCode\", response.data.generatedCodes[0].code);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subscriptionTierId\": 1,\n  \"quantity\": 10,\n  \"totalAmount\": 999.90,\n  \"paymentMethod\": \"CreditCard\",\n  \"paymentReference\": \"TXN_S_{{$timestamp}}\",\n  \"companyName\": \"Test Company\",\n  \"invoiceAddress\": \"Test Address\",\n  \"taxNumber\": \"1234567890\",\n  \"codePrefix\": \"AGRI\",\n  \"validityDays\": 365,\n  \"notes\": \"Test purchase\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sponsorship/purchase-package",
              "host": ["{{baseUrl}}"],
              "path": ["sponsorship", "purchase-package"]
            }
          }
        },
