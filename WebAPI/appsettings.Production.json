{
  "EPPlus": {
    "ExcelPackage": {
      "License": "NonCommercialOrganization:ZiraAI"
    }
  },
  "Services": {

  },
  "TaskSchedulerOptions": {
    "Enabled": false,
    "StorageType": "inmemory",
    "ConnectionString": "",
    "RecurringJobsJsonFilePath": ""
  },
  "N8N": {
    "WebhookUrl": "${N8N_WEBHOOK_URL}",
    "UseImageUrl": true
  },
  "ApiBaseUrl": "${RAILWAY_PUBLIC_DOMAIN}",
  "Iyzico": {
    "BaseUrl": "https://api.iyzipay.com",
    "ApiKey": "${IYZICO_API_KEY}",
    "SecretKey": "${IYZICO_SECRET_KEY}",
    "Currency": "TRY",
    "PaymentChannel": "MOBILE",
    "PaymentGroup": "SUBSCRIPTION",
    "TokenExpirationMinutes": 30,
    "Callback": {
      "DeepLinkScheme": "ziraai://payment-callback",
      "FallbackUrl": "${ZIRAAI_WEBAPI_URL}/api/v1/payments/callback"
    },
    "Timeout": {
      "InitializeTimeoutSeconds": 30,
      "VerifyTimeoutSeconds": 30,
      "WebhookTimeoutSeconds": 15
    },
    "Retry": {
      "MaxRetryAttempts": 3,
      "RetryDelayMilliseconds": 1000,
      "UseExponentialBackoff": true
    }
  },
  "WebAppUrl": "${ZIRAAI_WEBAPP_URL}",
  "MobileApp": {
    "PlayStorePackageName": "com.ziraai.app"
  },
  "Referral": {
    "DeepLinkBaseUrl": "${ZIRAAI_WEBAPI_URL}/ref/"
  },
  "SponsorRequest": {
    "TokenExpiryHours": 24,
    "MaxRequestsPerDay": 10,
    "DeepLinkBaseUrl": "${RAILWAY_PUBLIC_DOMAIN}/sponsor-request/",
    "DefaultRequestMessage": "Yapay destekli ZiraAI kullanarak bitkilerimi analiz yapmak istiyorum. Bunun için ZiraAI uygulamasında sponsor olmanızı istiyorum."
  },
  "DealerInvitation": {
    "DeepLinkBaseUrl": "${ZIRAAI_WEBAPI_URL}/dealer-invitation/",
    "FallbackDeepLinkBaseUrl": "${ZIRAAI_WEBAPI_URL}/dealer-invitation/",
    "TokenExpiryDays": 7,
    "SmsTemplate": "{sponsorName} size ücretsiz ZiraAI abonelikleri gönderdi!\n\nZiraAI ürünlerinizdeki hastalıkları, eksiklileri analiz eden bir YAPAY ZEKA uygulamasıdır!\n\n Müşterilerinize ZiraAI abonelikleri gönderebilirsiniz\n\n Davet Kodunuz: DEALER-{token}\n\nHemen katılmak için tıklayın:\n{deepLink}\n\nVeya uygulamayı indirin:\n{playStoreLink}"
  },
  "Redemption": {
    "DeepLinkBaseUrl": "${ZIRAAI_WEBAPI_URL}/redeem",
    "FallbackDeepLinkBaseUrl": "ziraai://redemption-success"
  },
  "Sponsorship": {
    "SmsTemplate": "{sponsorName} size ucretsiz ZiraAI aboneligi hediye etti!\n\n ZiraAI urunlerinizdeki hastaliklari, eksiklikleri analiz eden bir YAPAY ZEKA uygulamasidir!\n\n Abonelik Kodunuz: {sponsorCode}\n\nHemen kullanmak icin tiklayin:\n{deepLink}\n\nVeya ZiraAI'yi indirin:\n{playStoreLink}"
  },
  "Security": {
    "RequestTokenSecret": "${SPONSOR_REQUEST_SECRET}"
  },
  "AIOptimization": {
    "MaxSizeMB": 0.1,
    "Enabled": true,
    "MaxWidth": 800,
    "MaxHeight": 600,
    "Quality": 70
  },
  "RabbitMQ": {
    "ConnectionString": "${RABBITMQ_URL}",
    "Queues": {
      "PlantAnalysisRequest": "plant-analysis-requests",
      "PlantAnalysisResult": "plant-analysis-results",
      "Notification": "notifications",
      "DealerInvitationRequest": "dealer-invitation-requests"
    },
    "RetrySettings": {
      "MaxRetryAttempts": 3,
      "RetryDelayMilliseconds": 1000
    },
    "ConnectionSettings": {
      "RequestedHeartbeat": 60,
      "NetworkRecoveryInterval": 10
    }
  },
  "FileStorage": {
    "Provider": "FreeImageHost",
    "Local": {
      "BasePath": "wwwroot/uploads",
      "BaseUrl": "${RAILWAY_PUBLIC_DOMAIN}"
    },
    "FreeImageHost": {
      "ApiKey": "${FREEIMAGEHOST_API_KEY}"
    }
  },
  "CacheOptions": {
    "Host": "${REDIS_HOST}",
    "Port": "${REDIS_PORT}",
    "Password": "${REDIS_PASSWORD}",
    "Database": 0,
    "Ssl": true
  },
  "ConnectionStrings": {
    "DArchPgContext": "${DATABASE_URL}"
  },
  "WebAPI": {
    "BaseUrl": "${ZIRAAI_WEBAPI_URL}",
    "InternalSecret": "${ZIRAAI_INTERNAL_SECRET}"
  },
  "SignalR": {
    "UseRedisBackplane": false,
    "MaxConnectionsPerUser": 5,
    "ConnectionTimeout": 30,
    "KeepAliveInterval": 15
  },
  "UseRedis": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information",
      "Microsoft.AspNetCore.Http.Connections": "Information",
      "Business": "Information"
    }
  },
  "SeriLogConfigurations": {
    "FileLogConfiguration": {
      "FolderPath": "/app/logs/",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 52428800,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}"
    },
    "PerformanceMonitoring": {
      "Enabled": true,
      "SlowOperationThresholdMs": 2000,
      "CriticalOperationThresholdMs": 5000,
      "EnableDetailedHttpLogging": false,
      "LogRequestHeaders": false,
      "LogResponseHeaders": false,
      "EnableMetrics": true,
      "MetricsRetentionDays": 30
    }
  },
  "SmsService": {
    "Provider": "Netgsm"
  },
  "SmsProvider": {
    "Netgsm": {
      "ApiUrl": "https://api.netgsm.com.tr",
      "UserCode": "",
      "Password": "",
      "MsgHeader": "ZIRAAI"
    }
  }
}