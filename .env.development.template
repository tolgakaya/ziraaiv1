# ZiraAI Development Environment Configuration Template
# Copy this file to .env.development and fill in your local values

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ziraai_dev
DATABASE_USER=ziraai
DATABASE_PASSWORD=devpass
DATABASE_CONNECTION_STRING=Host=localhost;Port=5432;Database=ziraai_dev;Username=ziraai;Password=devpass

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:5001;http://localhost:5000
JWT_SECRET_KEY=your-development-jwt-secret-key-min-32-chars
JWT_ISSUER=ZiraAI_Development
JWT_AUDIENCE=ZiraAI_Development_Users

# External Services (Development)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

REDIS_CONNECTION=localhost:6379

# N8N Webhook (Local)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/api/plant-analysis
N8N_API_KEY=development-api-key

# File Storage (Development)
FILE_STORAGE_PROVIDER=Local
FILE_STORAGE_PATH=wwwroot/uploads/plant-images/

# Logging
LOG_LEVEL=Debug
LOG_TO_FILE=true
LOG_FILE_PATH=logs/development/

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_HANGFIRE_DASHBOARD=true
ENABLE_DEBUG_MODE=true
ENABLE_DETAILED_ERRORS=true

# Email Settings (Development - Mailhog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USE_SSL=false
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@ziraai.dev

# Development Tools
HOT_RELOAD=true
WATCH_MODE=true