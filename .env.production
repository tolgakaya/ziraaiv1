# ZiraAI Production Environment Configuration Template
# Copy this file to .env.production and fill in your Railway production values
# IMPORTANT: Keep these values secure and never commit actual values to git

# Database Configuration (Railway Production)
DATABASE_HOST=yamabiko.proxy.rlwy.net
DATABASE_PORT=41760
DATABASE_NAME=railway
DATABASE_USER=postgres
DATABASE_PASSWORD=your-production-password
DATABASE_CONNECTION_STRING=Host=yamabiko.proxy.rlwy.net;Port=41760;Database=railway;Username=postgres;Password=your-production-password

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://+:443;http://+:80
JWT_SECRET_KEY=your-production-jwt-secret-key-min-32-chars
JWT_ISSUER=ZiraAI_Production
JWT_AUDIENCE=ZiraAI_Production_Users

# Railway Configuration
RAILWAY_ENVIRONMENT=production
PORT=8080

# External Services (Production)
RABBITMQ_HOST=your-production-rabbitmq.railway.app
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=production-user
RABBITMQ_PASSWORD=production-password

REDIS_CONNECTION=your-production-redis.railway.app:6379

# N8N Webhook (Production)
N8N_WEBHOOK_URL=https://your-production-n8n.railway.app/webhook/api/plant-analysis
N8N_API_KEY=production-api-key

# File Storage (Production - Cloud)
FILE_STORAGE_PROVIDER=S3
AWS_ACCESS_KEY_ID=your-production-access-key
AWS_SECRET_ACCESS_KEY=your-production-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ziraai-production-images

# Logging
LOG_LEVEL=Warning
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/ziraai/production/
ENABLE_APPLICATION_INSIGHTS=true
APPLICATION_INSIGHTS_KEY=your-production-insights-key

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_HANGFIRE_DASHBOARD=false
ENABLE_DEBUG_MODE=false
ENABLE_DETAILED_ERRORS=false

# Email Settings (Production - SendGrid or similar)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USE_SSL=true
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-production-sendgrid-api-key
EMAIL_FROM=noreply@ziraai.com

# Monitoring
NEW_RELIC_APP_NAME=ZiraAI-Production
NEW_RELIC_LICENSE_KEY=your-production-newrelic-key
SENTRY_DSN=your-production-sentry-dsn

# Security
CORS_ALLOWED_ORIGINS=https://ziraai.com,https://www.ziraai.com,https://admin.ziraai.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
SSL_REDIRECT=true
HSTS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance
MIN_THREADS=10
MAX_THREADS=100
REQUEST_TIMEOUT_SECONDS=30