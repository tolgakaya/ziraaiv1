# ZiraAI Staging Environment Configuration Template
# Copy this file to .env.staging and fill in your Railway staging values

# Database Configuration (Railway Staging)
DATABASE_HOST=your-staging-db.railway.app
DATABASE_PORT=5432
DATABASE_NAME=railway
DATABASE_USER=postgres
DATABASE_PASSWORD=your-staging-password
DATABASE_CONNECTION_STRING=Host=your-staging-db.railway.app;Port=5432;Database=railway;Username=postgres;Password=your-staging-password

# Application Settings
ASPNETCORE_ENVIRONMENT=Staging
ASPNETCORE_URLS=https://+:443;http://+:80
JWT_SECRET_KEY=your-staging-jwt-secret-key-min-32-chars
JWT_ISSUER=ZiraAI_Staging
JWT_AUDIENCE=ZiraAI_Staging_Users

# Railway Configuration
RAILWAY_ENVIRONMENT=staging
PORT=8080

# External Services (Staging)
RABBITMQ_HOST=your-staging-rabbitmq.railway.app
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=staging-user
RABBITMQ_PASSWORD=staging-password

REDIS_CONNECTION=your-staging-redis.railway.app:6379

# N8N Webhook (Staging)
N8N_WEBHOOK_URL=https://your-staging-n8n.railway.app/webhook/api/plant-analysis
N8N_API_KEY=staging-api-key

# File Storage (Staging - Cloud)
FILE_STORAGE_PROVIDER=S3
AWS_ACCESS_KEY_ID=your-staging-access-key
AWS_SECRET_ACCESS_KEY=your-staging-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ziraai-staging-images

# Logging
LOG_LEVEL=Information
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/ziraai/staging/
ENABLE_APPLICATION_INSIGHTS=true
APPLICATION_INSIGHTS_KEY=your-staging-insights-key

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_HANGFIRE_DASHBOARD=true
ENABLE_DEBUG_MODE=true
ENABLE_DETAILED_ERRORS=true

# Email Settings (Staging - SendGrid or similar)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USE_SSL=true
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-staging-sendgrid-api-key
EMAIL_FROM=noreply@staging.ziraai.com

# Monitoring
NEW_RELIC_APP_NAME=ZiraAI-Staging
NEW_RELIC_LICENSE_KEY=your-staging-newrelic-key

# Security
CORS_ALLOWED_ORIGINS=https://staging.ziraai.com,https://staging-admin.ziraai.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100